<div class="container">
    <div class="d-flex justify-content-center gap-3 mb-6">
        @* <MudSelect @bind-Value="title" Label="Title" Placeholder="Mr./Mrs." Class="w-25">
            <MudSelectItem Value="@("Mr.")">Mr.</MudSelectItem>
            <MudSelectItem Value="@("Mrs.")">Mrs.</MudSelectItem>
